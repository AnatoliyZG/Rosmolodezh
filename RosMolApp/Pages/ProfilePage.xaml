<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RosMolApp.Pages.ProfilePage">
    <ScrollView>
        <VerticalStackLayout>
            <Frame CornerRadius="25" Margin="0,-10,0,0" Padding="20,30,20,20" BorderColor="Transparent" HasShadow="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            HeightRequest="124"
                            WidthRequest="124"
                            Stroke="Transparent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="120"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Radius="6" Opacity=".15"/>
                        </Border.Shadow>
                        <ImageButton x:Name="ProfileImage"
                                 Source="ellipse"
                                 Aspect="AspectFill">
                        </ImageButton>
                    </Border>

                    <VerticalStackLayout Grid.Column="2">
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding UserName}"/>
                                    <Span Text="{Binding UserId}" FontSize="10" TextColor="Gray"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Text="Направление:" TextColor="Gray" FontSize="10" Margin="0,10,0,5"/>
                        <Label Text="{Binding Direction}" FontSize="12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <VerticalStackLayout Margin="0,10,0,0" Grid.Column="0" Spacing="10">
                                <Image HeightRequest="16" Source="call_ico"/>
                                <Image HeightRequest="16" Source="calendar_ico"/>
                                <Image HeightRequest="16" Source="location_ico"/>
                                <Image HeightRequest="16" Source="vk_ico"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Margin="5,10,0,0" Grid.Column="1" Spacing="10">
                                <Label x:Name="telephone" Text="+7 978 999 99 99" FontSize="12"/>
                                <Label x:Name="borndate" Text="10.10.2001" FontSize="12" />
                                <Label x:Name="city" Text="Симферополь" FontSize="12"/>
                                <Label x:Name="vklink" Text="vk.com/user1" FontSize="12"/>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Grid>
            </Frame>
            <Border HorizontalOptions="Fill" VerticalOptions="Fill" Margin="0,20" Stroke="Transparent">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25"/>
                </Border.StrokeShape>
                <Grid Padding="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <Label Text="Мой рейтинг: 99 999 б" Grid.Row="0"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                        <Label FontSize="12" Text="Я патриот: 9999 б" Grid.Column="0" Grid.Row="0"/>
                        <Label FontSize="12" Text="Я доброволец: 9999 б" Grid.Column="0" Grid.Row="1"/>
                        <Label FontSize="12" Text="Я медтйщик: 9999 б" Grid.Column="0"  Grid.Row="2"/>
                        <Label FontSize="12" Text="Я предприниматель: 9999 б" Grid.Column="1" Grid.Row="0"/>
                        <Label FontSize="12" Text="Я творец: 9999 б" Grid.Column="1" Grid.Row="1"/>
                        <Label FontSize="12" Text="Я молодежь: 9999 б" Grid.Column="1"  Grid.Row="2"/>
                    </Grid>
                </Grid>
            </Border>
            <Button Text="Выйти из аккаунта"
                Clicked="Exit_Clicked"
                Margin="20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
