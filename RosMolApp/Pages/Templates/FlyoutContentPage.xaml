<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RosMolApp.Pages.Templates.FlyoutContentPage"
             xmlns:pages="clr-namespace:RosMolApp.Pages.Templates"
             xmlns:local="clr-namespace:RosMolApp"
             x:DataType="pages:FlyoutContentPage"
             Shell.NavBarIsVisible="True"
             Shell.ForegroundColor="Black"
             Shell.TitleColor="{OnPlatform Black, iOS=Transparent}">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding back}"/>
    </Shell.BackButtonBehavior>
    
    <local:LoadingScreen x:Name="LoadingOverlay">
        <ScrollView>
            <VerticalStackLayout x:Name="ContentView">
                
            </VerticalStackLayout>
        </ScrollView>
    </local:LoadingScreen>
</ContentPage>
